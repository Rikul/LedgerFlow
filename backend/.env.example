# LedgerFlow Backend Environment Variables
# Copy this file to .env and fill in the values

# Flask Configuration
FLASK_CONFIG=development  # Options: development, testing, production
PORT=5000

# Security - REQUIRED IN PRODUCTION
# Generate secure keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-random-secret-key
JWT_SECRET_KEY=change-this-to-a-different-random-secret-key

# Database (optional, defaults to SQLite)
# DATABASE_URL=sqlite:///ledgerflow.db
# DATABASE_URL=postgresql://user:password@localhost/ledgerflow

# CORS - Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8000

# Development mode (set to False in production)
DEBUG=True
